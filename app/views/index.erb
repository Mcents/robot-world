<h1>My Robots</h1>
<hr>

<% @robots.each do |robot| %>
  <h3><a href="/robots/<%= robot.id %>"><%= robot.name.capitalize %></a></h3>
  <p><%= robot.city%>, <%= robot.state %></p>
    <p><%= robot.department %></p>
    <a href="/robots/<%= robot.id  %>/edit">Edit</a>
<form action="/robots/<%= robot.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="delete"/>
</form>
<% end %>
